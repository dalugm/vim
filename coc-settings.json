{
  "coc.preferences.maxFileSize": "10MB",
  "coc.preferences.extensionUpdateCheck": "weekly",

  "suggest.minTriggerInputLength": 2,

  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },

  "python.linting.enabled": true,
  "python.pythonPath": "~/.pyenv/versions/neovim3/bin/python",

  "explorer.sources": [
    {
      "name": "buffer",
      "expand": false
    },
    {
      "name": "file",
      "expand": true
    }
  ],
  "explorer.presets": {
    "floating": {
      "position": "floating"
    }
  },

  "snippets.userSnippetsDirectory": "~/.vim/snippets"
}
